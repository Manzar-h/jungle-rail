<section class="admin-dashboard-show">
  <header class="page-header">
    <h1>Jungle Admin Dashboard:</h1>
  </header>

  <table class="table table-striped table-hover">
    <thead>
      <tr class="list-header">
        <th>List</th>
        <th>Count</th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <td class="list-name">
          <%= link_to "Products", admin_products_path %>
        </td>
        <td class="list-count">
          <%= @product_count %>
        </td>
      </tr>
      <tr>
        <td class="list-name">
          Categories
        </td>
        <td class="list-count">
          <%= @category_count %>
        </td>
      </tr>
    </tfoot>
  </table>
</section>

